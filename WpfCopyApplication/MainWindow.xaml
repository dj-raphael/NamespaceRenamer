        <!--                    </GridViewColumn>-->
        <!--                </GridView>-->
        <!--            </ListView.View>-->
        <!--        </ListView>-->

        <!--        <ListView HorizontalAlignment="Left" Height="269" Margin="17,528,0,0" VerticalAlignment="Top" Width="929" Name="ListView" ItemsSource="{Binding CollectionConflictItems, IsAsync=True }" >-->
